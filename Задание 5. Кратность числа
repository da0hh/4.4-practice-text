#include <iostream>


int main() {
    setlocale(LC_ALL, "RU"); 
    int a;
    int b;

    std::cout << "Введите первое число: ";
    std::cin >> a;
    std::cout << "Введите второе число: ";
    std::cin >> b;
    std::cout << "-----Проверяем-----\n";
    if (a % b == 0) {
        std::cout << "Да, " << a << " делится на " << b << " без остатка!\n";
    }
    else {
        std::cout << "Нет, " << a << " не делится на " << b << " без остатка!";
    }
}
