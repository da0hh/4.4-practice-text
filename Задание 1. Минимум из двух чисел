#include <iostream>

int main() {
    setlocale(LC_ALL, "RU");
    int a;
    int b;

    std::cout << "Введите первое число: ";
    std::cin >> a;
    std::cout << "Введите второе число: ";
    std::cin >> b;
    std::cout << "-----Проверяем----- \n";
    if (a > b) {
        std::cout << "Наименьшее число: " << b << "\n";
    }
    else if (a  < b) {
        std::cout << "Наименьшее число: " << a << "\n";
    }
    else {
        std::cout << "Числа равны!";
    }
}
