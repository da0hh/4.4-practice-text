#include <iostream>

int main() {
    setlocale(LC_ALL, "RU");
    int income;
    std::cout << "-----Калькулятор Налогооблажения----\n"; std::cout << "Введите свой доход: ";
    std::cin >> income;
    int tax;
    if (income >= 50000) {
        tax += (income - 50000) * 30 /100;
        income = 50000;
    }
    if (income > 10000) {
        tax += (income-10000) * 20 /100;
    }
    tax += income * 13 / 100;
    std::cout << "Сумма налога: " << tax << std::endl;
}
