#include <iostream>
using namespace std;


int main() {
    setlocale(LC_ALL, "RU"); 
    int x;
    cout << "Введите число: ";
    cin >> x;
    cout << "-----Проверяем-----\n";
    if (x % 2 == 0) {
        cout << "Число " << x << " - четное";
    }else{
      cout << "Число " << x << " - нечетное";
    }
}
