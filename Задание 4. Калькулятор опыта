#include <iostream>
using namespace std;


int main() {
    setlocale(LC_ALL, "RU"); 
    int points;
    int level = 1;
    cout << "Ваш уровень " << level << ".\n";
    cout << "Введите число очков опыта: ";
    cin >> points;
    cout << "-----Считаем-----\n";
    if (points >= 1000 and points < 2500) {
        level += 1;
        cout << "Ваш уровень: " << level << "\n";
    }
    else if (points >= 2500 and points < 5000) {
        level += 2;
        cout << "Ваш уровень: " << level << "\n";
    }
    else if (points >= 5000 and points < 10000) {
        level += 3;
        cout << "Ваш уровень: " << level << "\n";
    }
    else {
        cout << "Ошибка. Введите очки опыта.";
    }
}
