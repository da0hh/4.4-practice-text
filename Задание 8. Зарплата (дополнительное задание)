#include <iostream>
#include <algorithm>

int main() {
    setlocale(LC_ALL, "RU");
    int salary1, salary2, salary3;
    std::cout << "Введите зарплату первого сотрудника: ";
    std::cin >> salary1;
    std::cout << "Введите зарплату второго сотрудника: ";
    std::cin >> salary2;
    std::cout << "Введите зарплату третьего сотрудника: ";
    std::cin >> salary3;
    std::cout << "-----Считаем-----\n";
    int maxNum = std::max({ salary1, salary2, salary3 });
    int minNum = std::min({ salary1,salary2,salary3 });
    std::cout << "Самая высокая зарплата в отделе: " << maxNum << " рублей.\n";
    std::cout << "Разница между самой высокой и самой низкой зарплатой в отделе: " << maxNum - minNum << " рублей.\n";
    int med = (salary1 + salary2 + salary3) / 3;
    std::cout << "Средняя зарплата в отделе: " << med << " рублей.\n";
}
