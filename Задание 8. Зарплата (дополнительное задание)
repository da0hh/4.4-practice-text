#include <iostream>

int main() { 
  int salary1; int salary2; int salary3;
  std::cout << "Введите зарплату первого сотрудника: ";
  std::cin >> salary1;
  std::cout << "Введите зарплату второго сотрудника: ";
  std::cin >> salary2;
  std::cout << "Введите зарплату третьего сотрудника: ";
  std::cin >> salary3;
  std::cout << "-----Считаем-----\n";
  int top = 0;
  if (salary1 > salary2 and salary1 > salary3) {
    top = salary1;
    std::cout << "Самая высокая зарплата в отделе: " << top << " рублей.\n";
  } else if(salary2 > salary1 and salary2 > salary3){
    top = salary2;
    std::cout << "Самая высокая зарплата в отделе: " << top << " рублей.\n";
  } else{
    top = salary3;
    std::cout << "Самая высокая зарплата в отделе: " << top << " рублей.\n";
  }
  if (salary1 < salary2 and salary1 < salary3){
    int margin = top - salary1;
    std::cout << "Разница между самой высокой и самой низкой зарплатой в отделе: " << margin << "рублей\n";
  } else if(salary2 < salary1 and salary2 < salary3){
    int margin = top - salary2;
    std::cout << "Разница между самой высокой и самой низкой зарплатой в отделе: " << margin << "рублей\n";
  } else {
    int margin = top - salary3;
    std::cout << "Разница между самой высокой и самой низкой зарплатой в отделе: " << margin << " рублей\n";
  }
  int med = (salary1+salary2+salary3)/3;
  std::cout << "Средняя зарплата в отделе: " << med << " рублей.\n";
}
